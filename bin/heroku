#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')

require 'heroku_link'
require 'wrapper'

usage = <<EOTXT
=== Heroku Commands
Outside an app dir:
  list - list my apps
  create [name] - create a new app
  destroy [name] - destroy an app
  clone [name] - make a clone of a heroku app for local development

Inside an app dir:
  push - deploy local changes to heroku app
  pull - get changes in the heroku repo

Example:
  heroku create myapp
  heroku clone myapp
  (make changes locally)
  heroku push
EOTXT

command = ARGV.shift.strip rescue ""
if command.length == 0
	puts usage
	exit 1
end

wrapper = Wrapper.new
unless wrapper.methods.include? command
	puts "no such method as #{command}, run without arguments for usage"
	exit 2
end

wrapper.send(command, ARGV)

